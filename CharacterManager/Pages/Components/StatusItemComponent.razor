<MudPaper Class="pa-1 ma-1">
	@if (Status.IsReadOnly())
	{
		<MudNumericField Value="Status.Value"
						 Label="@Status.Type.ToString()"
						 Adornment="Adornment.End"
						 ReadOnly="true"
						 FullWidth="false"
						 Variant="Variant.Text" />
	}
	else
	{

		<MudNumericField @bind-Value="Status.Value"
						 Label="@Status.Type.ToString()"
						 Adornment="Adornment.End"
						 ReadOnly="false"
						 FullWidth="false"
						 Variant="Variant.Text" />
	}
</MudPaper>

@code {
	[Parameter]
	public Status Status { get; set; } = null!;
}
